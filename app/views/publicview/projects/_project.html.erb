<div class="card" style="width: 20rem;">
  <img class="card-img-top" src=<%= project.banner_image_url %> alt="Card image cap" style="height: 5rem;">
  <div class="card-body">
    <h4 class="card-title"><%= link_to project.title , project %></h4>
    <p class="card-text"><%= truncate(project.desc, length: 100) %></p>
    <p class="btn btn-primary"><%= link_to "More" , project %> </p>
  </div>
</div>